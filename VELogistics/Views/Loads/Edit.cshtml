            </div>
            <div class="form-group">
                <label asp-for="Load.DeliverdDate" class="control-label"></label>
                <input asp-for="Load.DeliverdDate" class="form-control" />
                <span asp-validation-for="Load.DeliverdDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Load.Location" class="control-label"></label>
                <input asp-for="Load.Location" class="form-control" />
